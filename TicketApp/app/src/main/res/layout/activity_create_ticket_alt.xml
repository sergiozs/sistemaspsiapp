<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_create_ticket"
    android:background="#F3F2EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/border_rounded_corners">

        <EditText
            android:id="@+id/ct_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName"/>
        <requestFocus />

        <EditText
            android:id="@+id/ct_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Piso"
            android:inputType="number"
            android:maxLength="2"/>

        <Spinner
            android:id="@+id/ct_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_create_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:layout_gravity="center"
        android:text="Crear Ticket"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/button_effect"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/btn_create_claim_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:layout_gravity="center"
        android:text="Crear y Atender"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/button_effect_blue"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>